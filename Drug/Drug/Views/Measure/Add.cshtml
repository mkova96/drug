﻿
@model DrugData.Models.ViewModels.MeasureViewModel

<form asp-action="Create" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>
        Nova mjerna jedinica
    </h2>
    <div class="form-group">
        <label asp-for="MeasureName">Naziv </label>
        <input asp-for="MeasureName" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Spremi</button>
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Odustani</button>
        </a>
    </div>
</form>
