@model DrugData.Models.ViewModels.EditManufacturerViewModel

<form asp-action="Update" asp-route-id="@Model.Manufacturer.ManufacturerId" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h2>Uredi</h2>
    <div class="form-group">
        <label asp-for="Manufacturer.ManufacturerName">Naziv </label>
        <input asp-for="Manufacturer.ManufacturerName" id="da" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer.About">O proizvođaču </label>
        <textarea asp-for="Manufacturer.About" id="da" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer.ImagePath">Slika</label>
        <input asp-for="Manufacturer.ImagePath" id="da" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Spremi</button>
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Odustani</button>
        </a>
    </div>

</form>

<style>
    #da {
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>
