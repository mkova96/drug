@model PaginatedList<DrugData.Models.Medication>

<h2>Proizvodi</h2>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Pretraži: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Pretraži" class="btn btn-default" /> |
            <a asp-action="Index">Cijeli popis</a>
        </p>
    </div>
</form>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">ID</a>
        </th>
        <th class="text-center"><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Naziv</a></th>
        <th class="text-center">
    </tr>
    @foreach (var item in Model)
    {
        <tr data-toggle="collapse" id="xman" data-target="@("#" + item.DrugId.ToString())" style="cursor:pointer;">
            <td class="text-center">@item.DrugId</td>
            <td class="text-center">@item.DrugName</td>
            <td class="text-center">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-drugId="@item.DrugId"><img class="pull-right" src="~/images/cart.png" alt="" width="35" height="35" /></a>
                <a asp-action="Edit" asp-route-id="@item.DrugId" class="btn btn-warning btn-sm">Uredi</a>
                <a asp-action="AddComment" asp-route-id="@item.DrugId" class="btn btn-warning btn-sm">Komentiraj</a>
                <form asp-action="Delete" asp-route-id="@item.DrugId" asp-route-page="@(Model.PageIndex)"
                      method="POST" style="display: inline-block">
                    <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
                </form>
            </td>
        <tr></tr>
        <tr class="bg-light">
            <td colspan="8" style="padding:0;margin:0;">
                <div id="@item.DrugId" class="subRow collapse">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="column1">
                                <img src="~/images/pliva.png" class="imageCell" height="170" width="150" />

                            </div>
                            <div class="column">
                                <div>
                                    <h4><b><center>@item.DrugName</center></b></h4>
                                </div>
                                <h1></h1>
                                <div>
                                    <h4>Datum proizvodnje: <b>@item.DateProduced.Date.ToString("dd/MM/yyyy")</b></h4>
                                </div>

                                <div>
                                    <h4><center>Datum isteka valjanosti: <b>@item.DateExpires.Date.ToString("dd/MM/yyyy")</b></center></h4>
                                </div>
                                <div>
                                    <h4>Djelatnik od: <b>@item.Price</b></h4>
                                </div>

                            </div>
                            <div class="column1">
                                <div>
                                    <h5><b><center>Kratka biografija</center></b></h5>
                                </div>
                                <div>
                                    @item.Usage
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </td>
        </tr>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Novi proizvod</a>
</div>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Prošla
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Sljedeća
</a>


<style>
    #xman {
        background-color: white;
        color: black;
        cursor: pointer;
        padding: 30px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
    }

        .active, #xman:hover {
            background-color: #c5c5c5;
        }

    #cman {
        padding: 0 14px;
        display: none;
        overflow: hidden;
        background-color: #ff0000;
    }
</style>

<style>
    * {
        box-sizing: border-box;
    }

    /* Create two equal columns that floats next to each other */
    .column {
        float: left;
        width: 35%;
        padding: 10px;
        height: 280px; /* Should be removed. Only for demonstration */
    }

    .column1 {
        float: left;
        width: 20%;
        padding: 30px;
        height: 280px; /* Should be removed. Only for demonstration */
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

