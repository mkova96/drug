﻿

@model DrugData.Models.ViewModels.OrderViewModel

<form asp-action="Checkout" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>
        Podaci za slanje
    </h2>
    <div class="form-group">
        <label asp-for="FirstName">Ime </label>
        <input asp-for="FirstName" id="da"  class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="LastName">Prezime </label>
        <input asp-for="LastName" id="da"  class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Address">Adresa </label>
        <input asp-for="Address" id="da"  class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="ZipCode">Poštanski broj </label>
        <input asp-for="ZipCode" id="da"  class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="CityName">Grad </label>
        <input asp-for="CityName" id="da"  class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" id="da"  class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>










    <div class="text-center">
        <button type="submit" class="btn btn-primary">Spremi</button>
        <a asp-controller="Cart" asp-action="Index">
            <button type="button" class="btn btn-secondary">Odustani</button>
        </a>
    </div>

</form>


<style>
    #da {
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>                       