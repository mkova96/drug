@model IEnumerable<Package>

<h5> </h5>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Pakiranja</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td class="text-center">@item.PackageType</td>
        <td class="text-center">
            <a asp-action="Edit" asp-route-id="@item.PackageId" class="btn btn-warning btn-sm">Uredi</a>
            <form asp-action="Delete" asp-route-id="@item.PackageId" method="POST" style="display: inline-block">
                <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
            </form>
        </td>
    </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Novo pakiranje</a>
</div>
