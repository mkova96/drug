@{
    ViewData["Title"] = "Dodaj admina";
}
@model UserViewModel
<form asp-action="Create" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h3>
        Novi admin
    </h3>
    <div class="form-group">
        <label asp-for="Name">Ime:</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Surname">Prezime:</label>
        <input type="text" class="form-control" asp-for="Surname">
    </div>
    <div class="form-group">
        <label asp-for="EMail">E-Mail Adresa:</label>
        <input type="text" class="form-control" asp-for="EMail">
    </div>
    <div class="form-group">
        <label asp-for="Password">Lozinka:</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Potvrdite lozinku</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PostCode"></label>
        <input asp-for="PostCode" class="form-control" />
        <span asp-validation-for="PostCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityName"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryID"></label>
        <select asp-for="CountryID" asp-items="@ViewBag.Items" class="form-control"></select>
    </div>


    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Odustani</button>
    </a>
</form>
