@model IEnumerable<Doctor>

<h5> </h5>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Doktori</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center"><a asp-action="Show" asp-route-id="@item.Id">@item.FullName</a></td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Uredi</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="POST" style="display: inline-block">
                    <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
                </form>
                <a class="btn btn-success" asp-controller="Message" asp-action="SendTo" asp-route-id="@item.Id">Pošalji poruku</a>

            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Novi doktor</a>
</div>
