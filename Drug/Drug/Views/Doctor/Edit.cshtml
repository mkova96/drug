@model DrugData.Models.ViewModels.EditDoctorViewModel

<form asp-action="Update" asp-route-id="@Model.Doctor.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (@ViewData["Success"] != null)
    {
        <div class="alert alert-success">Admin spremljen</div>
    }
    <h2>Uredi</h2>
    <div class="form-group">
        <label asp-for="Doctor.Name">Ime</label>
        <input type="text" class="form-control" asp-for="Doctor.Name">
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Surname">Prezime</label>
        <input type="text" class="form-control" asp-for="Doctor.Surname">
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Email">E-Mail adresa</label>
        <input type="text" class="form-control" asp-for="Doctor.Email">
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Address">Adresa</label>
        <input asp-for="Doctor.Address" class="form-control" />
        <span asp-validation-for="Doctor.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId">Grad</label>
        <select asp-for="CityId" asp-items="@(new SelectList((IEnumerable<City>) @ViewData["Cities"],"CityId", "CityPbr"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <b>Hrvatska</b>
    </div>

    <div class="form-group">
        <label asp-for="Doctor.Biography">Kratka biografija  </label>
        <textarea asp-for="Doctor.Biography" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Education">Obrazovanje </label>
        <input type="text" class="form-control" asp-for="Doctor.Education">
    </div>
    <div class="form-group">
        <label asp-for="Doctor.Title">Titula</label>
        <input type="text" class="form-control" asp-for="Doctor.Title">
    </div>

    <div class="col">
        <h3>Specijalizacija</h3>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(model => model.SpecializationType, "existing", new { Class = "form-check-input", Id = "ExistingRadio", Name = "SpecializationType" })
                        <label class="form-check-label" for="ExistingRadio">Odaberi postojeću specijalizaciju</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(model => model.SpecializationType, "new", new { Class = "form-check-input", Id = "NewRadio", Name = "SpecializationType" })
                        <label class="form-check-label" for="NewRadio">Dodaj novu specijalizaciju</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group" id="docSelectSpecialization">
            <label asp-for="SpecializationId">Specijalizacija</label>
            <select asp-for="SpecializationId" asp-items="@(new SelectList((IEnumerable<Specialization>) @ViewData["Specializations"], "SpecializationId", "SpecializationName"))" class="form-control"></select>
        </div>
        <div class="form-group" id="docCreateSpecialization" style="display: none">
            <div class="form-group">
                <label asp-for="Specialization.SpecializationName">Ime </label>
                <input type="text" class="form-control" asp-for="Specialization.SpecializationName">
            </div>
        </div>
    </div>


    <div class="text-center">
        <button type="submit" class="btn btn-primary">Spremi</button>
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Odustani</button>
        </a>
    </div>

</form>
