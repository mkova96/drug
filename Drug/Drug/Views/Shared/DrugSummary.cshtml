@model Medication
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" > 
        <img src="~/images/capsule.png" style="min-height:150px;height:150px;" />
        <div class="caption">
            <h3 class="pull-right"><a asp-controller="Cart" asp-action="AddToCart"
                   asp-route-drugId="@Model.DrugId"><img class="pull-right" src="~/images/cart.png" alt="" width="35" height="35" /></a></h3>

            <h3>
                <a asp-controller="Drugs" asp-action="Show" asp-route-drinkId="@Model.DrugId">@Model.DrugName</a>
                @Model.Price.ToString() <!--Model.Currancy.CurrencyName.ToString()-->
            </h3>
            <!--<p>Model.ShortDescription</p>-->
        </div>
    </div>
</div>