@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Moj profil<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a asp-controller="Manage" asp-action="Index">Uredi profil</a></li>
            <li><a asp-controller="Manage" asp-action="ChangePassword">Promijeni lozinku</a></li>
            <li><a asp-controller="Message" asp-action="Index">Poruke</a></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <li class="nav-item">
                            <button type="submit" class="btn btn-link nav-link">Odjava</button>
                        </li>
                </form>
            </li>
    </ul>
    </li>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link">Registracija</a></li>
        <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Prijava</a></li>
    </ul>
}
