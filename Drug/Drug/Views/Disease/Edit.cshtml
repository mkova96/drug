@model DrugData.Models.ViewModels.EditCategoryViewModel

<form asp-action="Update" asp-route-id="@Model.Category.DiseaseId" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (@ViewData["Success"] != null)
    {
        <div class="alert alert-success">Tip bolesti spremljen</div>
    }
    <h2>Uredi</h2>
    <div class="form-group">
        <label asp-for="Category.DiseaseName">Naziv </label>
        <input asp-for="Category.DiseaseName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category.ICD">Međunarodna klasifikacija bolesti </label>
        <input asp-for="Category.ICD" class="form-control">
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Spremi</button>
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Odustani</button>
        </a>
    </div>

</form>
